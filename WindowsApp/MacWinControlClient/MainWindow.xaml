<Window x:Class="MacWinControlClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MacWinControl Client" 
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ–¥ï¸ MacWinControl" FontSize="28" FontWeight="Bold" Foreground="#0078D4"/>
            <TextBlock Text="Windows Client" FontSize="14" Foreground="Gray"/>
        </StackPanel>

        <!-- Connection Status -->
        <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Ellipse x:Name="StatusIndicator" Width="12" Height="12" Fill="Gray" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusText" Text="Niet verbonden" FontWeight="SemiBold"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Dit IP: " Foreground="Gray"/>
                    <TextBlock x:Name="LocalIPText" Text="..." FontFamily="Consolas"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Computer: " Foreground="Gray"/>
                    <TextBlock x:Name="ComputerNameText" Text="..." FontFamily="Consolas"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Connection Input -->
        <Border Grid.Row="2" Background="#F5F5F5" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Mac IP Adres:" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="HostInput" 
                             Grid.Column="0"
                             Text="192.168.1." 
                             FontFamily="Consolas"
                             FontSize="14"
                             Padding="10"
                             Margin="0,0,10,0"
                             VerticalContentAlignment="Center"/>
                    
                    <Button x:Name="ConnectButton" 
                            Grid.Column="1"
                            Content="Verbinden"
                            Click="ConnectButton_Click"
                            Background="#0078D4"
                            Foreground="White"
                            Padding="20,10"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </Grid>
                
                <TextBlock Text="Poort: 52525" Foreground="Gray" FontSize="11" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Log -->
        <Border Grid.Row="3" Background="#1E1E1E" CornerRadius="8" Padding="10">
            <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="LogText" 
                           Foreground="#00FF00" 
                           FontFamily="Consolas" 
                           FontSize="11"
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- Mode Indicator -->
        <Border x:Name="ModeIndicator" 
                Grid.Row="4" 
                Background="#107C10" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,15,0,0"
                Visibility="Collapsed">
            <TextBlock x:Name="ModeText" 
                       Text="ðŸ–±ï¸ Ontvangt input van Mac" 
                       Foreground="White" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
